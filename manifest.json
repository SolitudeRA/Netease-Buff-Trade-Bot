{
  "manifest_version": 2,
  "name": "网易BUFF自动求购",
  "description": "Developed by SolitudeRA for only private usage.",
  "version": "0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "unlimitedStorage"
  ],
  "externally_connectable": {
    "matches": [
      "https://buff.163.com/goods/*"
    ]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "scripts": [
      "scripts/monitorTools.js",
      "scripts/monitor.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' http://localhost:*; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://buff.163.com/goods/*"
      ],
      "css": [
        "assets/bootstrap.min.css",
        "styleSheets/toolBarInjector.css"
      ],
      "js": [
        "scripts/tools.js",
        "scripts/trade.js",
        "scripts/monitorContent.js",
        "scripts/toolBarInjector.js"
      ]
    },
    {
      "matches": [
        "https://buff.163.com/market/buy_order/wait_supply?game=csgo"
      ],
      "js": [
        "scripts/waitingSupply.js"
      ]
    }
  ]
}